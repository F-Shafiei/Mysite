@{  
    WebImage photo = null;
    var newFileName = "";
    var imagePath = "";
   // var imageThumbPath  = "";

    if(IsPost){
        photo = WebImage.GetImageFromRequest();
        if(photo != null){
             newFileName = Path.GetFileName(photo.FileName);
             imagePath = "img/img-khabar/"+ newFileName;
             photo.Save("~/" + imagePath);

          /*  imageThumbPath = "img/" + newFileName;
            photo.Resize(width: 200, height: 200, preserveAspectRatio: true,
               preventEnlarge: true);
            photo.Save("~/" + imageThumbPath);*/
        }
    }
}
<!DOCTYPE html>
<html>
<head>
  <title>Resizing Image</title>
</head>
<body>
<h1>Thumbnail Image</h1>
  <form method="post" enctype="multipart/form-data">
    <fieldset>
      <legend> Creating Thumbnail Image </legend>
      <label for="Image">Image</label>
      <input type="file" name="Image" />
      <br/>
      <input type="submit" value="Submit" />
    </fieldset>
  </form>
    @if(imagePath != ""){
    <div class="result">
        <img src="@imagePath" alt="Thumbnail image" />
        <a href="@Html.AttributeEncode(imagePath)" target="_Self">
            View full size
        </a>
    </div>

    }
</body>
</html>